<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:buttonTint">@color/primaryLightColor</item>

        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
        <item name="buttonStyle">@style/App_ButtonStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:radioButtonStyle">@style/App_RadioButtonStyle</item>
        <item name="radioButtonStyle">@style/App_RadioButtonStyle</item>
    </style>

    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>

    <style name="App_RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>
</resources>